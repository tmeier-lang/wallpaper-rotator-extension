<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.wallpaper-rotator" path="/org/gnome/shell/extensions/wallpaper-rotator/">
    <key name="wallpaper-directory" type="s">
      <default>''</default>
      <summary>Wallpaper directory</summary>
      <description>Directory containing wallpaper images</description>
    </key>
    <key name="interval" type="i">
      <default>60</default>
      <range min="1" max="1440"/>
      <summary>Rotation interval</summary>
      <description>Minutes between wallpaper changes</description>
    </key>
  </schema>
</schemalist>